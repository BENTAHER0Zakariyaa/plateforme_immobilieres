extends layouts/main.layout.pug

mixin Row(r)
    div(class='flex items-center justify-between px-4 py-2 rounded-xl border border-black')
        div(class='hidden md:block text-start font-bold w-full')
            img(src='/uploads/'+r.cover class='w-10 h-10 object-cover rounded-xl')
        div(class='hidden lg:block text-start font-bold w-full flex-grow')
            span #{r.title}
        div(class='text-start font-bold w-full')
            span #{r.surface} mÂ²
        div(class='text-start font-bold w-full')
            span= r.city
        div(class='text-start font-bold w-full')
            span= r.type
        div(class='text-start font-bold w-full')
            span #{r.price} Dhs
        div(class='text-black w-full')
            div(class='flex flex justify-between items-center space-x-1')
                a(href='/post/'+r._id+'/delete')
                    svg(xmlns='http://www.w3.org/2000/svg' class='h-5 w-5' fill='none' viewBox='0 0 24 24' stroke='currentColor')
                        path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16')
                a(href='/post/'+r._id+'/update')
                    svg(xmlns='http://www.w3.org/2000/svg' class='h-5 w-5' fill='none' viewBox='0 0 24 24' stroke='currentColor')
                        path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z')
                a(href='/post/'+r._id)
                    svg(xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                        path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z")
                        path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z")
block container
    section(class='my-10 mx-10')
        div
            a(href='/post' class='px-4 py-2 border border-black rounded-xl hover:text-white hover:bg-black transition duration-500') CREATE
        div(class='my-6 w-full flex flex-col space-y-2')
            if articles != null
                each a in articles
                    +Row(a)
            else
                div no data

block append script
