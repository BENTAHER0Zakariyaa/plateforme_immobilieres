//- GLOBAL VARIABLES
- var btn_primary = "px-4 py-2 border border-black rounded-xl hover:text-white hover:bg-black transition duration-500";
doctype html
html
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        title=title
        link(rel='stylesheet' href='/tailwindcss/tailwind.css')
        link(rel='stylesheet' href='/lightbox2/dist/css/lightbox.min.css')
body
    //- NAVBAR
    nav(class='md:flex md:flex-row justify-between items-center px-10 py-2')
        div(class='flex items-center justify-between')
            div
                a(href='/')
                    img(src='/images/LOGO.png' class='h-8')
            div(class='md:hidden')
                button(id='IdNavbarButton')
                    svg(class='h-8 w-8' xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor')
                        path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M4 6h16M4 12h16M4 18h16')
        //- MOBILE NAVBAR
        div(class='hidden my-6' id='IdNavbar')
            div
                ul(class='flex flex-col space-y-2')
                     li
                        a(href='/' class=(title=="Home"?'font-bold':'hover:underline')) Accueil
                     li
                        a(href='/explorer?page=1' class=(title=="Explorer"?'font-bold':'hover:underline')) Explorer
            div(class='my-6')
                ul(class='flex justify-center items-center space-x-2')
                    if session.user_id
                        li
                            a(href='/dashboard' class=btn_primary) Tableau de bord
                        li
                            a(href='/logout' class=btn_primary) Déconnexion
                    else
                        li
                            a(href='/login' class=btn_primary) Connexion

        //- PC NAVBAR
        div(class='hidden md:flex flex-row items-center space-x-8')
            ul(class='flex space-x-2')
                 li
                    a(href='/' class=(title=="Accueil"?'font-bold':'hover:underline')) Accueil
                 li
                    a(href='/explorer?page=1' class=(title=="Explorer"?'font-bold':'hover:underline')) Explorer
            ul(class='flex justify-center items-center space-x-2')
                if session.user_id
                    li
                        a(href='/dashboard' class=btn_primary) Tableau de bord
                    li
                        a(href='/logout' class=btn_primary) Déconnexion
                else
                    li
                        a(href='/login' class=btn_primary) Connexion

    //- CONTAINER
    block container

    //- FOOTER
    footer(class='flex justify-between items-center p-4 bg-black text-white')
     img(src='/images/LOGO-white.png' class='h-8')
     div &copy; DARI 2021
     div
         ul(class='flex space-x-3 items-center')
             a(href='' class='hover:underline')
                li Facebook
             a(href='' class='hover:underline')
                li Instagram
             a(href='' class='hover:underline')
                li Twitter

    //- HIDDEN TOOLS
    button(id='IdHiddenButton' class='hidden z-10 fixed left-0 top-0 right-0 bottom-0 w-full h-full')
    //- JQUERY
    script(src='/jquery/jquery.js')
    script(src='/lightbox2/dist/js/lightbox.js')
    script(src='/jquery-mask-plugin/dist/jquery.mask.js')
    //- SCRIPT
block script
    script(src='/js/app.js')
